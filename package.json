{
    "name": "rth-apps-suite",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "postinstall": "npm run install:voyage && npm run install:excellere && npm run build:excellere",
        "start": "node start.js",
        "start:voyage": "cd travel_mcp && node index.js",
        "start:excellere": "cd excellere_mcp && node index.js",
        "install:voyage": "cd travel_mcp && npm install",
        "install:excellere": "cd excellere_mcp && npm install && cd ../excellere_ui && npm install",
        "build:voyage": "cd travel_ui && npm run build",
        "build:excellere": "cd excellere_ui && npm run build"
    },
    "engines": {
        "node": "18.x"
    }
}